/**
 * @var $block MyCompany\ExampleAdminNewPage\Block\Html\Title
 */
$cssClass = $block->getCssClass() ? ' ' . $block->getCssClass() : '';
$title = '';
if (trim($block->getPageHeading())) {
    $title = '<span class="base" data-ui-id="page-title-wrapper" ' . $block->getAddBaseAttribute() . '>'
        . $block->escapeHtml($block->getPageHeading()) . '</span>';
}
?>
<?php if ($title): ?>
    <div class="page-title-wrapper<?= /* @escapeNotVerified */
    $cssClass ?>">
        <h1 class="page-title">
            <?php if ($block->getId()): ?> id="<?= /* @escapeNotVerified */
            $block->getId() ?>" <?php endif; ?>
            <?php if ($block->getAddBaseAttributeAria()): ?>
                aria-labelledby="<?= /* @escapeNotVerified */
                $block->getAddBaseAttributeAria() ?>"
            <?php endif; ?>
            <?= /* @escapeNotVerified */
            $title ?>

            <!-- Show reviews count -->
            <?php if ($block->getCurrentproduct()): ?>
                <?= $block->getTotalReviews($block->getCurrentproduct()->getId()); ?>
            <?php endif; ?>
        </h1>
        <?= $block->getChildHtml() ?>
    </div>
<?php endif; ?>

